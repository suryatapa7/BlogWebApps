<%- include("partials/header.ejs") %>


<div class="bg-image">
    <div class="form-container">
        <h1 class="title">A simple Blog post üìù</h1>
        <%if (locals.isEdit) { %>
            <p class="form-text">Edit your Blog</p>
            <p class="form-text">Write whatever you want</p>
        <%} else {%>
            <p class="form-text">Fill the form for creating your blog</p>
        <%}%>
        <form
        action="<%= locals.isEdit ? `/edit/${locals.blogDetails?.id}` : '/about' %>"
        method="post"
      >
        <label for="bTitle" class="blog-main">Blog Title</label>
        <input
          type="text"
          id="bTitle"
          name="blogTitle"
          placeholder="Your Title Here..."
          required
        />

        <label for="bDes" class="blog-main">Blog description</label>
        <textarea
          type="text"
          id="bDes"
          name="blogDes"
          placeholder="Your Blog here..."
          rows="6"
          required
        >
        </textarea>
        <input
          type="submit"
          value="<%= locals.isEdit ? 'EDIT' : 'POST' %>"
        />
      </form>
    </div>
</div>



<%- include("partials/footer.ejs") %>