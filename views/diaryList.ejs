<%- include("partials/header.ejs") %>
<% if (blogList.length < 1) { %>
    <div class="no-blog-list">
        <h1 class="no-blog-title">Oops! No Blog YetðŸš«</h1>
        <img class="diary_img" src="images/panda_sleep.jpg" alt=""/>
